<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/abc_input_method_navigation_guard">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:backgroundTint="@color/accent_material_light"
        android:background="@drawable/shape"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:id="@+id/num1"
        android:layout_above="@+id/num4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num2"
        android:layout_alignTop="@+id/num1"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num3"
        android:layout_alignTop="@+id/num2"
        android:layout_toRightOf="@+id/num2"
        android:layout_toEndOf="@+id/num2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"

        android:id="@+id/numMul"
        android:layout_alignTop="@+id/num3"
        android:layout_toRightOf="@+id/num3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num4"
        android:layout_above="@+id/num7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num5"
        android:layout_above="@+id/num7"
        android:layout_toRightOf="@+id/num4"
        android:layout_toEndOf="@+id/num4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num6"
        android:layout_above="@+id/num8"
        android:layout_toRightOf="@+id/num5"
        android:layout_toEndOf="@+id/num5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"
        android:id="@+id/numminus"
        android:layout_above="@+id/num9"
        android:layout_toRightOf="@+id/num6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num7"
        android:layout_alignTop="@+id/num8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num8"
        android:layout_above="@+id/numDec"
        android:layout_toRightOf="@+id/num7"
        android:layout_toEndOf="@+id/num7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num9"
        android:layout_above="@+id/num0"
        android:layout_toRightOf="@+id/num8"
        android:layout_toEndOf="@+id/num8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"

        android:id="@+id/numPlus"
        android:layout_below="@+id/numminus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/num0"
        android:layout_toEndOf="@+id/num0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/numDec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/shape"
        android:id="@+id/num0"
        android:layout_toRightOf="@+id/numDec"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/numEqual"
        android:layout_toStartOf="@+id/numEqual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"

        android:id="@+id/numEqual"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/num9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/abc_input_method_navigation_guard"
        android:text=" "
        android:id="@+id/resultTV"
        android:textSize="40sp"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_marginTop="37dp"
        android:maxLines="1"
        android:maxLength="9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"
        android:id="@+id/numDiv"
        android:layout_above="@+id/numMul"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/num0"
        android:layout_toEndOf="@+id/num0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"
        android:id="@+id/numAC"
        android:layout_above="@+id/num1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"
        android:id="@+id/numPM"
        android:layout_above="@+id/num1"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="@color/background_material_light"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:background="@drawable/button_black"
        android:id="@+id/numPerc"
        android:layout_above="@+id/num3"
        android:layout_alignLeft="@+id/num3"
        android:layout_alignStart="@+id/num3" />

</RelativeLayout>
